{
  "compilerOptions": {
    "target": "es2016",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
